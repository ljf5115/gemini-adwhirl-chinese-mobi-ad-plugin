<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"   
     android:layout_width="fill_parent"   
      android:background="#f4f3f3"
     android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#f4f3f3"
    android:scrollbars="vertical"
   
    android:layout_height="fill_parent" >
    
    <RelativeLayout android:layout_width="fill_parent" android:id = "@+id/headlayout"
		android:gravity="center_vertical" android:background="@drawable/winad_offer_head_bg"
		android:layout_height="50dip" android:orientation="horizontal">
		<Button android:layout_height="30dip" android:id="@+id/offer_feedback_btn"
			android:textColor="#000000" android:layout_marginLeft="10dip" android:layout_alignParentLeft="true"
			android:layout_marginRight="10dip" android:layout_width="50dip"
			android:text="返回" android:background="@drawable/winad_offer_list_button_bg" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/winad_feedback_TextView"
			android:layout_weight="1.0" android:textColor="#FFFFFF" android:layout_gravity="center"
			android:textSize="21sp" android:gravity="center" android:text="意见反馈"/>
	</RelativeLayout>
	
    <TextView 
        android:id="@+id/feedback_info"
        android:layout_width="fill_parent"
        android:layout_below="@+id/headlayout"
        android:layout_height="wrap_content"
        android:lineSpacingExtra = "3dip"
        android:text="您好,欢迎提出您遇到的问题,或者改进建议,我们将尽快改善我们的产品和服务."
        android:textColor="#3e3e3e"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        />
    <EditText 
        android:id="@+id/feedback_edit"
        android:layout_width="fill_parent"
        android:layout_height="160dip"
        android:layout_below="@+id/feedback_info"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="6dip"
        android:gravity="top"
        android:textSize="15dip"
        />
    
    <TextView 
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="请留下您的Email,便于我们回复您的问题"
        android:layout_below="@+id/feedback_edit"
        android:textColor="#3e3e3e"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="7dip"
        />
    <EditText 
        android:id="@+id/eamil_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/email"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="5dip"
        android:textSize="15dip"
        android:inputType = "textEmailAddress"
        />
    <Button 
        android:id="@+id/submit"
        android:text="提交"
        android:layout_below="@+id/eamil_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dip"
        style="@style/offers_activity_main_btn_style"
        />

</RelativeLayout>
</ScrollView>